<h1>Listing echos</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @echos.each do |echo| %>
      <tr>
        <td><%= echo.body %></td>
        <td><%= link_to 'Show', echo %></td>
        <td><%= link_to 'Edit', edit_echo_path(echo) %></td>
        <td><%= link_to 'Destroy', echo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Echo', new_echo_path %>
